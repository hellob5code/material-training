<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:minHeight="@dimen/touch_target_72dp"
            android:paddingEnd="@dimen/keyline_1_material">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/avatar_size_mini"
                android:layout_height="@dimen/avatar_size_mini"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/keyline_1_material"
                android:background="@drawable/circle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/keyline_2_material"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/material_text"
                    android:textSize="@dimen/text_size_normal"
                    android:text="Title"
                    tools:ignore="HardcodedText"/>

                <TextView
                    android:id="@+id/subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/material_text_secondary"
                    android:textSize="@dimen/text_size_small"
                    android:text="Subhead"
                    tools:ignore="HardcodedText"/>
            </LinearLayout>
        </RelativeLayout>

        <android.support.percent.PercentFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/media_area"
                android:background="@color/primary_material_light"
                android:scaleType="centerCrop"
                app:layout_aspectRatio="@fraction/aspectRatio_16_9"
                app:layout_widthPercent="100%"/>
        </android.support.percent.PercentFrameLayout>

        <TextView
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_medium"
            android:text="Lorem ipsum dolor sit amet, mei an detraxit moderatius. Eos ex modo utroque, an mei eros aliquam."
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:ignore="HardcodedText"/>

        <LinearLayout
            android:id="@+id/action_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/touch_target_48dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small">

            <Button
                android:id="@+id/action1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_small"
                android:text="Action 1"
                tools:ignore="HardcodedText"/>

            <Button
                android:id="@+id/action2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Action 2"
                tools:ignore="HardcodedText"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>