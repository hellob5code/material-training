<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.percent.PercentFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/media_area"
                android:background="@color/primary_material_light"
                android:scaleType="centerCrop"
                app:layout_aspectRatio="@fraction/aspectRatio_16_9"
                app:layout_widthPercent="100%"/>
        </android.support.percent.PercentFrameLayout>

        <LinearLayout
            android:id="@+id/action_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:padding="@dimen/padding_small">

            <ImageButton
                android:id="@+id/action1"
                style="@style/Widget.AppCompat.ActionButton"
                android:layout_width="@dimen/touch_target_48dp"
                android:layout_height="@dimen/touch_target_48dp"
                android:layout_marginEnd="@dimen/margin_medium"
                android:src="@drawable/ic_favorite_black_24dp_alpha54"/>

            <ImageButton
                android:id="@+id/action2"
                style="@style/Widget.AppCompat.ActionButton"
                android:layout_width="@dimen/touch_target_48dp"
                android:layout_height="@dimen/touch_target_48dp"
                android:layout_marginEnd="@dimen/margin_medium"
                android:src="@drawable/ic_bookmark_black_24dp_alpha54"/>

            <ImageButton
                android:id="@+id/action3"
                style="@style/Widget.AppCompat.ActionButton"
                android:layout_width="@dimen/touch_target_48dp"
                android:layout_height="@dimen/touch_target_48dp"
                android:layout_marginEnd="@dimen/margin_medium"
                android:src="@drawable/ic_reply_black_24dp_alpha54"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>