<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.App.Light" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent_1</item>
        <item name="android:searchViewStyle">@style/Style.Material.SearchView.ActionBar</item>
    </style>

    <style name="Theme.Indigo.Light" parent="Theme.App.Light">
        <item name="android:colorPrimary">@color/material_indigo</item>
        <item name="android:colorPrimaryDark">@color/material_indigo_700</item>
        <item name="android:colorAccent">@color/material_pink</item>
    </style>

    <style name="Theme.Orange.Light" parent="Theme.App.Light">
        <item name="android:colorPrimary">@color/material_orange</item>
        <item name="android:colorPrimaryDark">@color/material_orange_700</item>
        <item name="android:colorAccent">@color/material_green</item>
    </style>

    <style name="Theme.Pink.Light" parent="Theme.App.Light">
        <item name="android:colorPrimary">@color/material_pink_700</item>
        <item name="android:colorPrimaryDark">@color/material_pink_900</item>
        <item name="android:colorAccent">@color/accent_1</item>
    </style>

    <style name="Theme.Teal.Light" parent="Theme.App.Light">
        <item name="android:colorPrimary">@color/material_teal</item>
        <item name="android:colorPrimaryDark">@color/material_teal_700</item>
        <item name="android:colorAccent">@color/material_light_blue</item>
    </style>
    
    <style name="Base.Theme.NoActionBar" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Theme.Indigo.Light.NoActionBar" parent="Base.Theme.NoActionBar">
        <item name="android:colorPrimary">@color/material_indigo</item>
        <item name="android:colorPrimaryDark">@color/material_indigo_700</item>
        <item name="android:colorAccent">@color/material_pink</item>
    </style>

    <style name="Theme.Orange.Light.NoActionBar" parent="Base.Theme.NoActionBar">
        <item name="android:colorPrimary">@color/material_orange</item>
        <item name="android:colorPrimaryDark">@color/material_orange_700</item>
        <item name="android:colorAccent">@color/material_green</item>
    </style>

    <style name="Theme.Pink.Light.NoActionBar" parent="Base.Theme.NoActionBar">
        <item name="android:colorPrimary">@color/material_pink_700</item>
        <item name="android:colorPrimaryDark">@color/material_pink_900</item>
        <item name="android:colorAccent">@color/accent_1</item>
    </style>

    <style name="Theme.Teal.Light.NoActionBar" parent="Base.Theme.NoActionBar">
        <item name="android:colorPrimary">@color/material_teal</item>
        <item name="android:colorPrimaryDark">@color/material_teal_700</item>
        <item name="android:colorAccent">@color/material_light_blue</item>
    </style>

</resources>