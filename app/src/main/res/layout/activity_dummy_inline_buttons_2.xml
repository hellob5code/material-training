<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    tools:context=".ui.activity.DummyInlineButtons2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:padding="@dimen/padding_small"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:divider="@drawable/space_small"
                android:showDividers="middle">

                <View
                    android:layout_width="96dp"
                    android:layout_height="160dp"
                    android:background="@color/material_grey_400"/>

                <View
                    android:layout_width="96dp"
                    android:layout_height="160dp"
                    android:background="@color/material_grey_400"/>

                <View
                    android:layout_width="96dp"
                    android:layout_height="160dp"
                    android:background="@color/material_grey_400"/>

                <View
                    android:layout_width="96dp"
                    android:layout_height="160dp"
                    android:background="@color/material_grey_400"/>

                <View
                    android:layout_width="96dp"
                    android:layout_height="160dp"
                    android:background="@color/material_grey_400"/>

                <View
                    android:layout_width="96dp"
                    android:layout_height="160dp"
                    android:background="@color/material_grey_400"/>
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/space_small"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium"
            android:showDividers="middle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/touch_target_36dp"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:layout_weight="1"
                    android:background="@color/material_grey_400"/>

                <Button
                    style="@style/ButtonRaised.Blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get started"
                    android:translationZ="4dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:background="@color/material_grey_400"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/material_grey_400"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/material_grey_400"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/material_grey_400"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/material_grey_400"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/material_grey_400"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/material_grey_400"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/material_grey_400"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/material_grey_400"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/material_grey_400"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/material_grey_400"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/material_grey_400"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/material_grey_400"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/material_grey_400"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/material_grey_400"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/material_grey_400"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>