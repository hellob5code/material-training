<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.RegisterEventActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/register_event_medt_email"
            style="@style/FullwidthTextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="email@mail.com"/>

        <include layout="@layout/divider_horizontal"/>

        <MaterialEditText
            android:id="@+id/register_event_medt_name"
            style="@style/TextAppearance.AppCompat.Display1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/keyline_1"
            android:layout_marginStart="@dimen/keyline_1"
            android:layout_marginTop="@dimen/margin_medium"
            android:hint="@string/register_event_hint_event_name"
            android:inputType="textCapWords"
            android:singleLine="true"
            app:materialEditTextColor="?attr/colorPrimary"/>

        <MaterialEditText
            android:id="@+id/register_event_medt_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/keyline_1"
            android:layout_marginStart="@dimen/keyline_1"
            android:hint="@string/register_event_hint_location"
            android:singleLine="true"
            app:floatingLabel="true"
            app:materialEditTextColor="?attr/colorPrimary"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/keyline_1"
            android:layout_marginStart="@dimen/keyline_1">

            <MaterialEditText
                android:id="@+id/register_event_medt_from_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_medium"
                android:layout_toStartOf="@+id/register_event_medt_from_time"
                android:drawablePadding="@dimen/padding_small"
                android:editable="false"
                android:hint="@string/register_event_hint_from"
                android:maxLines="1"
                app:floatingLabel="true"
                app:materialEditTextColor="?attr/colorPrimary"/>

            <MaterialEditText
                android:id="@+id/register_event_medt_from_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:drawablePadding="@dimen/padding_small"
                android:editable="false"
                android:maxLines="1"
                app:materialEditTextColor="?attr/colorPrimary"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/keyline_1"
            android:layout_marginStart="@dimen/keyline_1">

            <MaterialEditText
                android:id="@+id/register_event_medt_to_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_medium"
                android:layout_toStartOf="@+id/register_event_medt_to_time"
                android:drawablePadding="@dimen/padding_small"
                android:editable="false"
                android:hint="@string/register_event_hint_to"
                android:maxLines="1"
                app:floatingLabel="true"
                app:materialEditTextColor="?attr/colorPrimary"/>

            <MaterialEditText
                android:id="@+id/register_event_medt_to_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:drawablePadding="@dimen/padding_small"
                android:editable="false"
                android:maxLines="1"
                app:materialEditTextColor="?attr/colorPrimary"/>
        </RelativeLayout>

        <CheckBox
            android:id="@+id/register_event_cbx_all_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/keyline_1"
            android:layout_marginStart="@dimen/keyline_1"
            android:minHeight="@dimen/touch_target_48dp"
            android:paddingStart="@dimen/keyline_2_minus_48dp"
            android:text="@string/register_event_txt_all_day"/>

        <MaterialEditText
            android:id="@+id/register_event_medt_timezone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/keyline_1"
            android:layout_marginStart="@dimen/keyline_1"
            android:drawablePadding="@dimen/padding_small"
            android:hint="@string/register_event_hint_timezone"
            app:floatingLabel="true"
            app:materialEditTextColor="?attr/colorPrimary"/>
    </LinearLayout>
</ScrollView>
