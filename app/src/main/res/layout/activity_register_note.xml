<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/keyline_1"
    tools:context=".ui.activity.RegisterNoteActivity">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/register_note_medt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:hint="@string/register_note_hint_title"
        app:floatingLabel="highlight"
        app:floatingLabelText="@string/register_note_hint_title"
        app:maxCharacters="50" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/register_note_medt_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:hint="@string/register_note_hint_description"
        app:floatingLabel="highlight"
        app:floatingLabelText="@string/register_note_hint_description"
        app:maxCharacters="120" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/register_note_medt_extra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:hint="@string/register_note_hint_extra"
        app:floatingLabel="highlight"
        app:floatingLabelText="@string/register_note_hint_extra" />
</LinearLayout>
