<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/keyline_1"
    tools:context=".ui.activity.RegisterNoteActivity">

    <MaterialEditText
        android:id="@+id/register_note_medt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/register_note_hint_title"
        android:singleLine="true"
        app:floatingLabel="true"
        app:materialEditTextColor="?attr/colorPrimary"
        app:maxCharacters="50"/>

    <MaterialEditText
        android:id="@+id/register_note_medt_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/register_note_hint_description"
        app:floatingLabel="true"
        app:materialEditTextColor="?attr/colorPrimary"
        app:maxCharacters="120"/>

    <MaterialEditText
        android:id="@+id/register_note_medt_extra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/register_note_hint_extra"
        app:floatingLabel="true"
        app:materialEditTextColor="?attr/colorPrimary"/>
</LinearLayout>
