<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="@dimen/keyline_1"
    android:layout_marginStart="@dimen/keyline_1"
    android:orientation="vertical"
    tools:context=".ui.activity.RegisterApplicationActivity">

    <MaterialEditText
        android:id="@+id/register_application_edt_title"
        style="@style/TextAppearance.AppCompat.Display1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:hint="@string/register_application_hint_title"
        android:inputType="textCapWords"
        android:nextFocusDown="@+id/register_application_edt_price"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:floatingLabel="true"
        app:backgroundColor="?attr/colorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <MaterialEditText
            android:id="@+id/register_application_edt_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_weight="1"
            android:gravity="bottom"
            android:hint="@string/register_application_hint_price"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:nextFocusRight="@+id/register_application_edt_location"
            android:singleLine="true"
            app:floatingLabel="true"
            app:backgroundColor="?attr/colorPrimary"/>

        <MaterialEditText
            android:id="@+id/register_application_edt_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="bottom"
            android:hint="@string/register_application_hint_location"
            android:singleLine="true"
            app:floatingLabel="true"
            app:backgroundColor="?attr/colorPrimary"/>
    </LinearLayout>

    <MaterialEditText
        android:id="@+id/register_application_edt_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:hint="@string/register_application_hint_description"
        app:floatingLabel="true"
        app:backgroundColor="?attr/colorPrimary"/>
</LinearLayout>
