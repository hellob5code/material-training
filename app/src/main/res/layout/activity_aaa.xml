<SlidingPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/slidingPanelContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/btn_aaa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/navdrawer_child_buttons"
        android:textAllCaps="true"
        android:textColor="@color/material_text_disabled"
        android:textSize="@dimen/text_size_large" />

    <LinearLayout
        android:id="@+id/panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/material_blue"
        android:clickable="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/panelSeparator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/material_green"
            android:src="@android:color/black"
            tools:ignore="ContentDescription" />

        <RelativeLayout
            android:id="@+id/panelHeader"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/material_red"
            android:padding="10dp" >
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/material_yellow"/>
    </LinearLayout>
</SlidingPanelLayout>