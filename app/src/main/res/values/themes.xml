<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.Design.Light">
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="actionBarWidgetTheme">@null</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.Design.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="LaunchScreen.NoActionBar" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <!-- Light NoActionBar -->

    <style name="Cyan.NoActionBar" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/material_cyan</item>
        <item name="colorPrimaryDark">@color/material_cyan_700</item>
        <item name="colorAccent">@color/material_yellow</item>
    </style>

    <style name="Purple.NoActionBar" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/material_purple_500</item>
        <item name="colorPrimaryDark">@color/material_purple_700</item>
        <item name="colorAccent">@color/material_pink</item> <!-- Not final -->
    </style>

    <style name="Indigo.NoActionBar" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/material_indigo</item>
        <item name="colorPrimaryDark">@color/material_indigo_700</item>
        <item name="colorAccent">@color/material_pink</item>
    </style>

    <style name="Indigo.Cyan.NoActionBar" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/material_indigo</item>
        <item name="colorPrimaryDark">@color/material_indigo_700</item>
        <item name="colorAccent">@color/material_teal</item>
    </style>

    <style name="LightBlue.NoActionBar" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/material_light_blue_500</item>
        <item name="colorPrimaryDark">@color/material_light_blue_700</item>
        <item name="colorAccent">@color/material_pink</item>
    </style>

    <style name="Orange.NoActionBar" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/material_orange</item>
        <item name="colorPrimaryDark">@color/material_orange_700</item>
        <item name="colorAccent">@color/material_green</item>
    </style>

    <style name="BlueGrey.NoActionBar" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/material_blue_grey_700</item>
        <item name="colorPrimaryDark">@color/material_blue_grey_900</item>
        <item name="colorAccent">@color/material_indigo</item> <!-- Not final -->
    </style>

    <style name="Pink.NoActionBar" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/material_pink_700</item>
        <item name="colorPrimaryDark">@color/material_pink_900</item>
        <item name="colorAccent">@color/material_indigo</item>
    </style>

    <style name="Teal.NoActionBar" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/material_teal</item>
        <item name="colorPrimaryDark">@color/material_teal_700</item>
        <item name="colorAccent">@color/material_light_blue</item>
    </style>

    <style name="Grey50.NoActionBar" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/material_grey_50</item>
        <item name="colorPrimaryDark">@color/material_grey_400</item>
        <item name="colorAccent">@color/material_cyan</item>
