<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">240dp</item>
    </style>

    <style name="Item.Bottom">
        <item name="android:background">@color/material_grey_100</item>
    </style>

    <style name="Item.Bottom.Alt">
        <item name="android:background">@color/material_grey_200</item>
    </style>

    <style name="FullwidthSearchView" parent="Widget.AppCompat.SearchView">
        <!-- Background for the search query section (e.g. EditText) -->
        <item name="queryBackground">@android:color/transparent</item>
        <!-- Background for the section containing the action (e.g. voice search) -->
        <item name="submitBackground">@android:color/transparent</item>
        <!-- Close button icon -->
        <item name="closeIcon">@drawable/navigation_ic_cancel</item>
        <!-- Search button icon -->
        <item name="searchIcon">@android:color/transparent</item>
        <!-- Voice search button icon -->
        <item name="voiceIcon">@drawable/hardware_ic_keyboard_voice</item>
        <!-- Commit icon shown in the query suggestion row -->
        <item name="commitIcon">@drawable/navigation_ic_arrow_forward</item>
    </style>

    <style name="FullwidthTextField">
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/touch_target_56dp</item>
        <item name="android:layout_marginEnd">@dimen/keyline_1</item>
        <item name="android:layout_marginStart">@dimen/keyline_1</item>
        <!--<item name="hideUnderline">true</item>-->
    </style>

    <style name="AppEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">16sp</item>
    </style>

</resources>