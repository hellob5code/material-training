<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.training.android.materiel">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.App.Light">

        <activity
            android:name=".ui.activity.ComponentsActivity"
            android:theme="@style/Theme.Indigo.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.PatternsActivity"
            android:theme="@style/Theme.Orange.Light.NoActionBar"/>
        <activity
            android:name=".ui.activity.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".ui.activity.ComponentsActivity"/> <!-- TODO: Set real parent activity. -->
        <activity
            android:name=".ui.activity.DeveloperModeActivity"
            android:label="@string/title_activity_developer_mode"
            android:parentActivityName=".ui.activity.ComponentsActivity"/> <!-- TODO: Set real parent activity. -->
        <activity
            android:name=".ui.activity.SearchableActivity"
            android:label="@string/title_activity_searchable"
            android:launchMode="singleTop"
            android:theme="@style/Theme.Indigo.Light">
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
    </application>

</manifest>
