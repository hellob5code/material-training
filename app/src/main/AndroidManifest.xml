<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.erictruong.material.training">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.material_design.MaterialDesignActivity"
            android:noHistory="true"
            android:theme="@style/Cyan.NoActionBar"/>
        <activity
            android:name=".ui.what_is_material.WhatIsMaterialActivity"
            android:noHistory="true"
            android:theme="@style/LightBlue.NoActionBar"/>
        <activity
            android:name=".ui.animation.AnimationActivity"
            android:noHistory="true"
            android:theme="@style/Purple.NoActionBar"/>
        <activity
            android:name=".ui.style.StyleActivity"
            android:noHistory="true"
            android:theme="@style/Teal.NoActionBar"/>
        <activity
            android:name=".ui.layout.LayoutActivity"
            android:noHistory="true"
            android:theme="@style/Pink.NoActionBar"/>
        <activity
            android:name=".ui.components.ComponentsActivity"
            android:noHistory="true"
            android:theme="@style/Indigo.NoActionBar"/>
        <activity
            android:name=".ui.patterns.PatternsActivity"
            android:noHistory="true"
            android:theme="@style/Orange.NoActionBar"/>
        <activity
            android:name=".ui.usability.UsabilityActivity"
            android:noHistory="true"
            android:theme="@style/BlueGrey.NoActionBar"/>
        <activity
            android:name=".ui.resources.ResourcesActivity"
            android:noHistory="true"
            android:theme="@style/LightBlue.NoActionBar"/>
        <activity
            android:name=".ui.whats_new.WhatsNewActivity"
            android:noHistory="true"
            android:theme="@style/LightBlue.NoActionBar"/>

        <activity
            android:name=".ui.SettingsActivity"
            android:label="@string/title_settings"/>

        <activity
            android:name=".ui.components.lists.SampleListActivity"
            android:label="@string/title_sample_list"
            android:theme="@style/Grey50"/>
        <activity
            android:name=".ui.components.lists_controls.SampleListControlActivity"
            android:label="@string/title_sample_list_control"
            android:theme="@style/Grey50"/>

        <activity
            android:name=".ui.components.tabs.FixedTabBarActivity"
            android:label="@string/title_page_title"
            android:theme="@style/Cyan.NoActionBar"/>
        <activity
            android:name=".ui.components.tabs.ExtendedAppBarTabBarActivity"
            android:label="@string/title_page_title"
            android:theme="@style/Cyan.NoActionBar"/>
        <activity
            android:name=".ui.components.tabs.PinnedTabBarActivity"
            android:label="@string/title_page_title"
            android:theme="@style/Cyan.NoActionBar"/>
        <activity
            android:name=".ui.components.tabs.ColoredTabBarActivity"
            android:label="@string/title_page_title"
            android:theme="@style/Grey50.NoActionBar"/>
        <activity
            android:name=".ui.components.tabs.ScrollableTabBarActivity"
            android:label="@string/title_page_title"
            android:theme="@style/Cyan.NoActionBar"/>
        <activity
            android:name=".ui.components.tabs.FixedTabBarIconsActivity"
            android:label="@string/title_page_title"
            android:theme="@style/Cyan.NoActionBar"/>
        <activity
            android:name=".ui.components.tabs.ColoredTabBarIconsActivity"
            android:label="@string/title_page_title"
            android:theme="@style/Grey50.NoActionBar"/>
    </application>
</manifest>
